{
  "name": "radshift-core.backend",
  "version": "0.0.1",
  "description": "The core component for RadShift",
  "main": "index.js",
  "directories": {
    "test": "test/*"
  },
  "repository": "https://github.com/radyak/radshift-core",
  "scripts": {
    "test": "env PERSISTENCE_FILE=./data.json FS_ROOT=.tmp CONF_DIR=test MAX_AUTH_ATTEMPTS_BLOCKED_FOR_MILLISECONDS=1500 HOST_DOMAIN=test-domain.net mocha 'test/**/*.test.js' --recursive",
    "start": "node index.js",
    "watch": "nodemon --signal SIGHUP ./index.js localhost",
    "lint": "standard --fix --verbose"
  },
  "author": "florian.vogel84@gmx.net",
  "license": "ISC",
  "dependencies": {
    "@radyak/njs": "0.0.4",
    "cookie-parser": "^1.4.4",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1",
    "external-ip": "^2.1.1",
    "jsonwebtoken": "^9.0.0",
    "lowdb": "^1.0.0",
    "node-cron": "^2.0.3",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "password-hash": "^1.2.2",
    "randomstring": "^1.1.5",
    "request": "^2.88.0",
    "systeminformation": "^4.21.2",
    "winston": "^3.2.1"
  },
  "optionalDependencies": {},
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "standard": "^12.0.1",
    "supertest": "^4.0.2"
  },
  "standard": {
    "globals": [
      "Configuration",
      "Dependency",
      "Provider"
    ],
    "env": [
      "mocha"
    ]
  }
}

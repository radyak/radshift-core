{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "data.json"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "env": {
    "ACTIVE_CONTEXT_PROFILES": "dev-local, dev, no-auth",
    "PORT": 3000,
    "PERSISTENCE_FILE": "./data.json"
  },
  "ext": "js,json"
}